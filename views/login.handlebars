    <header>
    <div class="row1">
      <div class="title">
          <h1 class="hometitle">Plant It</h1>
      </div>
      <div class="btnGroup">
        {{#if logged_in}}
          <button class="homebtn"><a href="/profile">My Profile</a></button>
          <button class="login" id="logoutBtn">Logout</button>
        {{else}}
          <button class="login" id="loginBtn">Login</button>
        {{/if}}
      </div>
    </div>
    <div class="row2">
        <h2>Stop and read about the roses</h2>
    </div>
  </header>
<div class="main">
    <div class="statBox">
        <form class="form login-form">
            <h3>Login</h3>
            <div class="property">
              <label for="latin-name">Email:</label>
              <input class="email-login" type="text" id="latin-name" name="latin-name" />
            </div>
            <div class="property">
              <label for="plant-desc">Password:</label>
              <input class="password-login" id="plant-desc" name="plant-desc" />
            </div>
            <div class="">
              <button type="submit" class="postButton">Login</button>
            </div>
        </form>
    </div>

    <div class="statBox">
      <form class="form signup-form">
          <h3>Sign Up</h3>
          <div class="property">
            <label for="common-name">User Name:</label>
            <input class="name-signup" type="text" id="common-name" name="common-name" />
          </div>
          <div class="property">
            <label for="latin-name">Email:</label>
            <input class="email-signup" type="text" id="latin-name" name="latin-name" />
          </div>
          <div class="property">
            <label for="plant-desc">Password:</label>
            <input class="password-signup" id="plant-desc" name="plant-desc" />
          </div>
          <div class="">
            <button type="submit" class="postButton">Create Account</button>
          </div>
      </form>
    </div>
</div>
<script src="/js/login.js"></script>
